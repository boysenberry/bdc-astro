---
import Main from '../layouts/Main.astro';
const profilePicture = '/images/BoysenberryWithPlants.png';
---

<Main>
  <div class='profile'>
    <img
      alt="Boysenberry Payne's Website"
      width='100px'
      height='100px'
      class='profile__picture'
      src={profilePicture}
    />
    <div class='profile__details'>
      <h1>Boysenberry Payne</h1>
      <h2>Software Developer at Cordant Health Solutions</h2>
      <p>
        Maintaining and developing Sentry a drug testing management system as
        well as database development and server administration.
      </p>
    </div>
  </div>
</Main>

<style>
  .profile {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    padding: 1rem 0 3rem 0;
  }
  .profile__details {
    flex: 1 0 300px;
  }
  .profile__details > h1 {
    margin-top: 0;
  }
  .profile__picture {
    border-radius: 50%;
    margin: 0 2rem 1rem 0;
  }
</style>
